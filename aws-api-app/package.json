{
  "name": "aws-api-gateway-lambda-app",
  "version": "1.0.0",
  "description": "Serverless API application with AWS API Gateway and Lambda functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "./scripts/test.sh unit",
    "test:integration": "./scripts/test.sh integration",
    "test:coverage": "./scripts/test.sh coverage",
    "test:all": "./scripts/test.sh all",
    "tf:init": "terraform -chdir=terraform init",
    "tf:plan": "terraform -chdir=terraform plan -var-file=environments/dev.tfvars",
    "tf:apply": "terraform -chdir=terraform apply -var-file=environments/dev.tfvars",
    "tf:destroy": "terraform -chdir=terraform destroy -var-file=environments/dev.tfvars",
    "tf:output": "terraform -chdir=terraform output",
    "deploy": "./scripts/deploy.sh dev apply",
    "deploy:dev": "./scripts/deploy.sh dev apply",
    "deploy:staging": "./scripts/deploy.sh staging apply",
    "deploy:prod": "./scripts/deploy.sh prod apply",
    "destroy": "./scripts/deploy.sh dev destroy",
    "plan": "./scripts/deploy.sh dev plan",
    "dev": "./scripts/local-dev.sh start",
    "dev:stop": "./scripts/local-dev.sh stop",
    "dev:build": "npm run build && cp package.json lib/ && cd lib && npm install --production --silent",
    "dev:clean": "./scripts/local-dev.sh clean",
    "dev:logs": "./scripts/local-dev.sh logs",
    "dev:watch": "concurrently \"npm run watch\" \"wait-on lib/lambda/handlers/items.js && ./scripts/local-dev.sh start\"",
    "sam:start": "sam local start-api --port 3000 --warm-containers EAGER",
    "sam:build": "sam build",
    "health-check": "./scripts/health-check.sh",
    "verify-deployment": "./scripts/verify-deployment.sh",
    "deployment-summary": "./scripts/deployment-summary.sh",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "local": "sam local start-api"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "aws-sdk-mock": "^5.8.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7"
  },
  "keywords": [
    "aws",
    "lambda",
    "api-gateway",
    "terraform",
    "typescript",
    "serverless"
  ],
  "author": "",
  "license": "MIT"
}